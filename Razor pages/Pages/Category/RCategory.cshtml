@page
@model Razor_pages.Pages.Category.RCategoryModel

<div class="container p-3">
    <div class="row pt-4" >
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">Create New Category</a>
        </div>
    </div>

    <br /><br />

    <table class="table tableborder table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var category in Model.categoryList)
           {
                <tr>
                    <td width="50%">
                        @category.Name
                    </td>
                    <td width="30%">
                        @category.DisplayOrder
                    </td>
                </tr>
           }            
        </tbody>
    </table>
</div>